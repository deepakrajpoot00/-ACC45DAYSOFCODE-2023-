#include <stdio.h>
int main() {
    int x,y,a,b;
    printf("Enter the runtime of movie (in minutes) : ");
    scanf("%d", &x);
    
    printf("Enter the time of twice speed (in minutes) : ");
    scanf("%d", &y);
    a = x - y;
    b = y / 2;
    printf("Chef spend %d minutes in total watching the movie",a+b);
    return 0;
}
